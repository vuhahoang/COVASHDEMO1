<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="440dp"
        android:background="@drawable/content_detail">
        <Button
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="string/back"
            android:textColor="#272727"
            android:background="@drawable/button_with_border"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/back_arrow"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:background="#DCDCDC"
        android:orientation="vertical"
        android:translationY="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="string/covid_19"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="string/atribute_moscow_state_university"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_sed_do_eiusmod_tempor_incididunt_ut_lalore_et_dolore_magna_aliqua_ut_enim_ad_minim_veniam_quis_nostrud_exercitation_ullamco_laboris_nisi_ut_aliquip_ex_ea_commodo_consequat_duis_aute"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="string/read_more"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:textColor="#43A3DA"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="35dp"
        android:translationY="-280dp"
        android:orientation="horizontal"
        android:background="@drawable/button_with_border">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/keyboard_arrow_up"
            android:background="#9C9C9E"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:translationX="327dp"
            android:text="string/i"
            android:textColor="#272727"
            android:background="#9C9C9E"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>